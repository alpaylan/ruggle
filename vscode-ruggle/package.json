{
    "name": "ruggle",
    "displayName": "Ruggle",
    "description": "Search Rust APIs with Ruggle",
    "version": "0.0.1",
    "publisher": "AlperenKeles",
    "license": "MIT",
    "engines": {
        "vscode": "^1.84.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alpaylan/ruggle"
    },
    "activationEvents": [
        "onCommand:ruggle.search",
        "onCommand:ruggle.searchSelection",
        "onCommand:ruggle.setHost",
        "onCommand:ruggle.showLogs",
        "onCommand:ruggle.setScope",
        "onCommand:ruggle.startServer",
        "onCommand:ruggle.stopServer",
        "onCommand:ruggle.updateIndex",
        "onCommand:ruggle.installLibstdIndex",
        "onCommand:ruggle.indexCurrentProject"
    ],
    "main": "out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ruggle.search",
                "title": "Ruggle: Search APIs"
            },
            {
                "command": "ruggle.searchSelection",
                "title": "Ruggle: Search Selection"
            },
            {
                "command": "ruggle.setHost",
                "title": "Ruggle: Set Server Host"
            },
            {
                "command": "ruggle.showLogs",
                "title": "Ruggle: Show Logs"
            },
            {
                "command": "ruggle.setScope",
                "title": "Ruggle: Set Scope"
            },
            {
                "command": "ruggle.startServer",
                "title": "Ruggle: Start Server"
            },
            {
                "command": "ruggle.stopServer",
                "title": "Ruggle: Stop Server"
            },
            {
                "command": "ruggle.updateIndex",
                "title": "Ruggle: Add/Update Crate in Index"
            },
            {
                "command": "ruggle.installLibstdIndex",
                "title": "Ruggle: Install libstd/core/alloc Index"
            },
            {
                "command": "ruggle.listIndexed",
                "title": "Ruggle: List Indexed Crates"
            },
            {
                "command": "ruggle.indexCurrentProject",
                "title": "Ruggle: Index Current Project (Cargo.toml at workspace root)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ruggle",
            "properties": {
                "ruggle.host": {
                    "type": "string",
                    "default": "http://localhost:8000",
                    "description": "Ruggle server base URL"
                },
                "ruggle.scope": {
                    "type": "string",
                    "default": "set:libstd",
                    "description": "Default search scope"
                },
                "ruggle.limit": {
                    "type": "number",
                    "default": 30,
                    "description": "Max results"
                },
                "ruggle.threshold": {
                    "type": "number",
                    "default": 0.4,
                    "description": "Threshold"
                },
                "ruggle.autoStart": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start local Ruggle server if not reachable"
                },
                "ruggle.serverMode": {
                    "type": "string",
                    "enum": [
                        "managed",
                        "cargo",
                        "binary",
                        "docker"
                    ],
                    "default": "managed",
                    "description": "How to start the local server when autoStart is enabled"
                },
                "ruggle.serverCommand": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Ruggle server binary (used when serverMode=binary)"
                },
                "ruggle.indexDir": {
                    "type": "string",
                    "default": "",
                    "description": "Path to ruggle-index directory to pass as --index"
                },
                "ruggle.port": {
                    "type": "number",
                    "default": 8000,
                    "description": "Port to expose when serverMode=docker"
                },
                "ruggle.repoRoot": {
                    "type": "string",
                    "default": "",
                    "description": "Working directory for cargo mode (path to Ruggle repo root)"
                },
                "ruggle.managed.serverUrl": {
                    "type": "string",
                    "default": "",
                    "description": "Direct URL to ruggle-server binary for your platform (managed mode)"
                },
                "ruggle.managed.indexUrl": {
                    "type": "string",
                    "default": "",
                    "description": "URL to bundled std/core/alloc index archive (tar.gz or zip)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package --allow-missing-repository"
    },
    "devDependencies": {
        "@types/node": "^18",
        "@types/vscode": "^1.84.0",
        "typescript": "^5.6.3",
        "@vscode/vsce": "^2.32.0"
    },
    "dependencies": {}
}